{
	"Function Definition": {
		"prefix": "fn",
		"body": [
			"function ${1:name}(${2:args})",
			"\t${3:-- body...}",
			"end"
		],
		"description": "Create a Lua function"
	},
	"If Statement": {
		"prefix": "if",
		"body": [
			"if ${1:condition} then",
			"\t${2:-- body...}",
			"end"
		],
		"description": "Create an if statement"
	},
	"For Loop": {
		"prefix": "for",
		"body": [
			"for ${1:i} = ${2:1}, ${3:10} do",
			"\t${4:-- body...}",
			"end"
		],
		"description": "Create a for loop"
	},
	"Print Statement": {
		"prefix": "print",
		"body": [
			"print(${1:value})"
		],
		"description": "Print a value"
	}
}
